        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup"
        tools:targetApi="q">
        <activity
            android:name=".view.ChooseProfessionActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
