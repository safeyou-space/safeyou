        <!--app:layout_constraintTop_toBottomOf="@id/btnLogin" />-->

    <Button
        android:id="@+id/btnSignUp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/ripple_effect_transparent"
        android:fontFamily="@font/hay_roboto_normal"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/textPurpleColor"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toTopOf="@id/txtLicense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />

    <TextView
        android:id="@+id/txtLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hay_roboto_medium"
        android:gravity="center"
        android:background="@drawable/ripple_effect_transparent"
        android:text="@string/license_text"
        android:textColor="@color/textPurpleColor"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp" />

</androidx.constraintlayout.widget.ConstraintLayout>