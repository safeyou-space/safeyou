<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_44sdp"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_13sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:background="@color/otherContainerElementsColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/professionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_weight="1"
        android:fontFamily="@font/hay_roboto_regular"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:theme="@style/MyRadioButtonSettingsStyle" />

    <EditText
        android:id="@+id/addProfessionName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:enabled="false" />

</LinearLayout>