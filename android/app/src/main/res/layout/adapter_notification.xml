<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationUserImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/notificationUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/notificationUserImage"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_toEndOf="@id/notificationUserImage"
        android:fontFamily="@font/hay_roboto_regular"
        android:text="@string/replied_to_your_comment"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/notificationRepliedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hay_roboto_regular"
        android:text="@string/replied_to_your_comment"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/notificationUserName"
        android:layout_alignTop="@id/notificationUserImage"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/notificationRepliedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hay_roboto_light"
        android:textColor="@color/colorSeparatorMaritalStatus"
        android:layout_toEndOf="@id/notificationUserImage"
        android:layout_below="@id/notificationUserName"
        android:layout_marginStart="@dimen/_13sdp"
        android:textSize="12sp" />

</RelativeLayout>