<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/_280sdp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_edit_comment_background"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <TextView
        android:id="@+id/txtReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_transparent"
        android:fontFamily="@font/hay_roboto_bold"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/reply_text_key"
        android:textColor="@color/textPurpleColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/txtCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_transparent"
        android:fontFamily="@font/hay_roboto_bold"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/copy"
        android:textColor="@color/textPurpleColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle" />

</LinearLayout>