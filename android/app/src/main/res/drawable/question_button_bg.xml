<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple
            android:color="@color/white_transparent">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_100sdp" />
                    <solid android:color="@color/white_transparent" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/forgetSwitchColor" />
                    <corners android:radius="@dimen/_100sdp" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <ripple
            android:color="@color/white_transparent">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_100sdp" />
                    <solid android:color="@color/white_transparent" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_border_disabled" />
                    <corners android:radius="@dimen/_100sdp" />
                </shape>
            </item>
        </ripple>
    </item>

</selector>