<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true" >
        <shape
            android:shape="oval"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <solid android:color="@color/statusBarColorPurpleDark"/>
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp"/>
            <stroke
                android:width="4dp"
                android:color="#0000"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
          <solid android:color="@color/gray"/>
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp"/>
            <stroke
                android:width="4dp"
                android:color="#0000"/>
        </shape>
    </item>
</selector>